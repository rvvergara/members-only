<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |e| %>
    <ul>
    <li><%= e %></li>
    </ul>
    <% end %>
<% end %>
<%= form_for (@user) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name,class: 'form-control' %>
    <%= f.label :email %>
    <%= f.email_field :email,class:'form-control' %>
    <%= f.label :password %>
    <%= f.password_field :password,class:'form-control' %>
    <%= f.submit 'Sign Up',class:'btn btn-primary mt-2' %>
<% end %>