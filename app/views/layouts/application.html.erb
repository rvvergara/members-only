<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
     <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <div class="container py-3 w-50">
    <% if logged_in %>
    <%= link_to fa_icon('plus-square',text:'Create Post'),new_post_path,class:'btn btn-primary float-left' %>
    <%= link_to fa_icon('sign-out-alt',text:'Sign Out'),logout_path,method: :delete,class:'btn btn-warning float-right' %>
    <span class="btn btn-success float-right mr-2"><%= @current_user.name.capitalize %></span> 
    <div class="clearfix"></div>
    <% else %>
    <% if action_name != 'new' && controller_name != 'sessions'%>
    <div class="text-center">
   <%= link_to fa_icon('sign-in-alt',text:'Sign In'),login_path,class:'btn btn-primary' %>
    <%= link_to fa_icon('user-plus',text:'Sign Up'),signup_path,class:'btn btn-info' %>
   </div>
   <% end %>
    <% end %>
    </div>
    <%= yield %>
    </div>
  </body>
</html>
